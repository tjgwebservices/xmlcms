<#import "/spring.ftl" as spring/>
 
<html>
   <head>
      <title>Add Administrator Group</title>
      <link rel="stylesheet"
           type="text/css" href="<@spring.url '/css/style.css'/>"/>
      <link rel="stylesheet"
           type="text/css" href="<@spring.url '/css/main.css'/>"/>

   </head>
   <body>
      <#if errorMessage??>
      <div style="color:red;font-style:italic;">
         ${errorMessage}
      </div>
      </#if>
       
      <div>
         <fieldset>
            <legend>Add Administrator Group</legend>
            <form name="administratorGroup" action="" method="POST">
               Administrator Group Name: <@spring.formInput "administratorGroupForm.groupName" "" "text"/>    <br/>
               <input type="submit" value="Create" />
            </form>
         </fieldset>
      </div>
       
       
   </body>
    
</html>




